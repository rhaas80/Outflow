# Schedule definitions for thorn Outflow

STORAGE: outflow_flux

schedule outflow_init at CCTK_INITIAL
{
  lang: C
  options: global
} "initialize outflow stuff"

schedule outflow_postrecovery at CCTK_POST_RECOVER_VARIABLES
{ 
  LANG: C
  OPTIONS: global
} "initialize outflow stuff post recovery"

schedule outflow at CCTK_POSTSTEP \
   after SphericalSurface_HasBeenSet after update_sphere_const_rad
{
  lang: C
  options: global
} "compute outflow"


